<Window x:Class="Test.AdminDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="AdminDepartment" Height="460" Width="360">
    <Grid>
        <TextBox x:Name="txtDepartment" HorizontalAlignment="Left" Height="24" Margin="82,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Text="namn på ny avdelning..."/>
        <Button x:Name="btnAddDep" Content="Lägg till avdelning" HorizontalAlignment="Left" Margin="116,54,0,0" VerticalAlignment="Top" Width="120" Click="btnAddDep_Click"/>
        <ListBox x:Name="listBoxDepartment" HorizontalAlignment="Left" Height="247" Margin="21,116,0,0" VerticalAlignment="Top" Width="306" SelectionChanged="listBoxDepartment_SelectionChanged"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="21,98,0,0" TextWrapping="Wrap" Text="Befintliga avdelningar" VerticalAlignment="Top" Width="149"/>
        <Button x:Name="btnRemove" Content="Ta bort" HorizontalAlignment="Left" Margin="219,368,0,0" VerticalAlignment="Top" Width="108" Click="btnRemove_Click"/>
        <Button x:Name="btnEdit" Content="Byt namn till -&gt;" HorizontalAlignment="Left" Margin="20,393,0,0" VerticalAlignment="Top" Width="104" Click="btnEdit_Click" Height="23"/>
        <TextBox x:Name="textBoxNewName" HorizontalAlignment="Left" Height="23" Margin="129,393,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"/>

    </Grid>
</Window>
