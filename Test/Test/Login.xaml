<Window x:Class="Test.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Login" Height="391.86" Width="408.139">
    <Border Background="LightGray" Margin="20" CornerRadius="20">
        <StackPanel Margin="20">
            <Label Content="Logga in" Foreground="Black" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Användarnamn" Foreground="Black" FontSize="18"></Label>
            <TextBox Name="txtUserName" Background="White" FontSize="18"></TextBox>
            <Label Content="Lösenord" Foreground="Black" FontSize="18"></Label>
            <TextBox Name="txtPassword" Background="White" FontSize="18"></TextBox>
            <Button x:Name="btnLogin" FontSize="18" Content="Logga in" Width="100" Margin="110,0" Height="30" Click="btnLogin_Click"/>
        </StackPanel>
        
    </Border>
</Window>
