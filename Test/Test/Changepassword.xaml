<Window x:Class="Test.Changepassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Changepassword" Height="406.804" Width="408.139">
    <Border Background="LightGray" Margin="20" CornerRadius="20">
        <StackPanel Margin="20">
            <Label Content="Ändra lösenord" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator/>
            <Label Content="Användarnamn" Foreground="Black" FontSize="18"/>
            <TextBox x:Name="txtUserName" Background="White" FontSize="18"/>
            <Label Content="Lösenord" Foreground="Black" FontSize="18"/>
            <TextBox x:Name="txtPassword" Background="White" FontSize="18"/>
            <Label x:Name="lblnewpassword" Content="Nytt lösenord" Foreground="Black" FontSize="18"/>
            <TextBox x:Name="txtNewpassword" Background="White" FontSize="18"/>
            <Button x:Name="btnChangepassword" FontSize="18" Content="Byt lösenord" Margin="90,20,90,20" Height="30" Click="btnChangepassword_Click"/>
        </StackPanel>
    </Border>
</Window>
